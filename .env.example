# Telegram Bot Configuration
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# OpenRouter API Key
# Регистрация: https://openrouter.ai/
# Используется для форматирования текста через LLM
OPENROUTER_API_KEY=your_openrouter_key_here

# Groq API Key
# Регистрация: https://console.groq.com/
# Используется для транскрипции голоса через Whisper
GROQ_API_KEY=your_groq_key_here

# Database Configuration
# Для SQLite достаточно указать путь к файлу
DATABASE_URL=sqlite:///bot_database.db

# Logging Configuration
# Возможные значения: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Analytics Configuration
# Comma-separated list of Telegram user IDs with admin access to /analytics command
# Example: ADMIN_USER_IDS=123456789,987654321
# To get your user ID, send a message to @userinfobot in Telegram
ADMIN_USER_IDS=
